<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    >

    <Button
        android:id="@+id/genjin_date"
        android:background="@drawable/bt_shape_3"
        android:text="今天"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_20"/>

    <View
        android:id="@+id/line"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/genjin_date"
        android:layout_width="@dimen/dp_1"
        android:background="@color/darker_gray"
        android:layout_height="@dimen/dp_20"/>

    <android.support.v7.widget.CardView
        android:layout_below="@id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_margin="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来自 销售机会 【候慧峰】"
                    />


            </LinearLayout>

            <View
                android:layout_margin="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/divider_line_d4"
                />

              <RelativeLayout
                  android:layout_marginTop="@dimen/dp_5"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <ImageView
                      android:id="@+id/avatar"
                      android:background="@mipmap/avatar"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
                  <TextView
                      android:id="@+id/name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="汤"
                      android:layout_toRightOf="@id/avatar"
                      android:layout_marginLeft="@dimen/dp_5"
                      />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="07:10"
                      android:layout_toRightOf="@id/avatar"
                      android:layout_below="@id/name"
                      android:layout_marginLeft="@dimen/dp_5"
                      />
                   <TextView
                       android:id="@+id/num"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0"
                       android:layout_marginRight="@dimen/dp_5"
                       android:layout_alignParentRight="true"
                       />

                  <ImageView
                      android:background="@mipmap/message"
                      android:layout_width="wrap_content"
                      android:layout_toLeftOf="@id/num"
                      android:layout_marginRight="@dimen/dp_5"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:layout_margin="@dimen/dp_10"
                      android:layout_below="@id/avatar"
                      android:layout_width="match_parent"
                      android:text="测试结果"
                      android:layout_height="wrap_content"/>

              </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>