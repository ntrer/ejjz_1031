<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f7f7f7"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/diingdan_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colortext"
        android:layout_marginTop="@dimen/dp_5"
        android:text="2018 12-12 11:23:34"
        />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_below="@id/diingdan_time"
        android:background="@drawable/linear_border2"
        android:layout_margin="@dimen/dp_8"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/dingdan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/sp_14"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:text="200--上海数尚(18637280068)"
            />

        <Button
            android:id="@+id/tuidan"
            android:background="@drawable/btn_border2"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:text="退单"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:id="@+id/dingdan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_below="@id/dingdan_title"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colortext"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_7"
            android:text="数量:50件"
            />


        <TextView
            android:id="@+id/dingdan_dingjin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_alignParentRight="true"
            android:textColor="@color/colortext"
            android:layout_alignBaseline="@id/dingdan_num"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_7"
            android:text="订单:50件"
            />


        <TextView
            android:id="@+id/dingdan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_below="@id/dingdan_dingjin"
            android:layout_alignParentRight="true"
            android:textColor="@color/colortext"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_7"
            android:text="订单金额:50件"
            />

         <TextView
            android:id="@+id/dingdan_shouldget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_alignParentRight="true"
            android:textColor="@color/colortext"
            android:layout_below="@id/dingdan_money"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_7"
            android:text="订单:50件"
            />


        <TextView
            android:id="@+id/dingdan_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_below="@id/dingdan_shouldget"
            android:textColor="@color/red"
            android:text="已退单"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/dingdan_notquit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_below="@id/dingdan_shouldget"
            android:textColor="@color/triangle"
            android:text="正常"
            android:visibility="gone"
            />




        <TextView
            android:id="@+id/dingdan_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_below="@id/dingdan_num"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colortext"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_7"
            android:text="总价:50件"
            />


        <TextView
            android:id="@+id/dingdan_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_below="@id/dingdan_total"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colortext"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_7"
            android:text="应收:50元"
            />


        <TextView
            android:id="@+id/dingdan_creater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_below="@id/dingdan_get"
            android:textColor="@color/colortext"
            android:text="创建人:xxx"
            />

    </RelativeLayout>
    </LinearLayout>




</RelativeLayout>