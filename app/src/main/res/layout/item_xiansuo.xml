<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_marginTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

       <ImageView
           android:id="@+id/outTimrPic"
           android:layout_width="@dimen/dp_38"
           android:layout_height="@dimen/dp_28"
           android:layout_alignParentRight="true"
           android:src="@mipmap/pasttime"
           android:visibility="visible"
           />

        <TextView
            android:id="@+id/people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="刘总"
            />

        <TextView
            android:id="@+id/intent"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:maxEms="12"
            android:layout_below="@id/people"
            android:layout_alignParentLeft="true"
            android:textColor="@color/md_black_1000"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="本次:无意向"
            />

        <TextView
            android:id="@+id/xiugairen"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:maxEms="12"
            android:layout_below="@id/intent"
            android:layout_alignParentLeft="true"
            android:textColor="@color/md_black_1000"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="修改人:超级管理员"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/xiugairen"
            android:textSize="@dimen/sp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="下次沟通时间：2018-07-06 14:25:22"
            />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_alignBottom="@id/intent"
            android:layout_alignParentRight="true"
            android:textColor="@color/md_black_1000"
            android:text="18637280068"
            />

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_alignBottom="@id/xiugairen"
            android:layout_alignParentRight="true"
            android:textColor="@color/md_black_1000"
            />

        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_alignBottom="@id/date"
            android:layout_alignParentRight="true"
            android:textColor="@color/red"
            android:text="未分配"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/share2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_alignBottom="@id/date"
            android:layout_alignParentRight="true"
            android:textColor="@color/triangle"
            android:text="已分配"
            android:visibility="gone"
            />

    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line"
        />
</LinearLayout>