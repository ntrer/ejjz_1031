<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_height="wrap_content">

        <com.othershe.library.NiceImageView
            android:id="@+id/good_pic"
            app:corner_radius="@dimen/dp_5"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            />


        <RelativeLayout
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/good_name"
                android:layout_width="@dimen/dp_180"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/sp_14"
                android:layout_marginBottom="@dimen/dp_5"
                android:textColor="@color/black"
                android:text="数尚家装"
                android:maxLines="2"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/good_info"
                android:layout_width="@dimen/dp_180"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="3dp"
                android:layout_below="@id/good_name"
                android:textColor="@color/colortext"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="编号:89757/规格:DC122象牙色"
                />

            <TextView
                android:id="@+id/good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/good_info"
                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:text="零售价:￥20"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_12"/>

            <cn.refactor.library.SmoothCheckBox
                android:id="@+id/checkbox"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:duration="1"
                app:color_tick="@color/color_w"
                app:color_checked="@color/colorPrimary"
                app:color_unchecked_stroke="@color/line"
                />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/line"
        />
</LinearLayout>
