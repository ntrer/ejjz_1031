<?xml version="1.0" encoding="utf-8"?>

<com.shushang.aishangjia.ui.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<LinearLayout
    android:id="@+id/ll_zhangdan"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/zhangdan_pic"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@mipmap/zhangdandan"
        android:layout_marginStart="@dimen/dp_10"
        />

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

       <ImageView
           android:id="@+id/getPaper"
           android:layout_width="@dimen/dp_36"
           android:layout_height="@dimen/dp_36"
           android:layout_alignParentRight="true"
           android:src="@mipmap/yizuofei"
           android:visibility="visible"
           />

        <TextView
            android:id="@+id/merchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="联盟名称：数尚家居"
            />

        <TextView
            android:id="@+id/prove"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:maxEms="12"
            android:layout_below="@id/merchat"
            android:layout_alignParentLeft="true"
            android:textColor="@color/md_black_1000"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="证明人：赵航"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/prove"
            android:textSize="@dimen/sp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="2018-07-06 14:25:22"
            />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_12"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/md_black_1000"
            android:text="金额：1000元"
            />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_12"
            android:layout_alignBottom="@id/date"
            android:layout_alignParentRight="true"
            android:textColor="@color/md_deep_orange_A700"
            android:text="收入"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_12"
            android:layout_alignBottom="@id/date"
            android:layout_alignParentRight="true"
            android:textColor="@color/md_green_500"
            android:text="支出"
            android:visibility="gone"
            />

    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/quit"
            android:text="作废"
            android:background="@color/md_red_400"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</com.shushang.aishangjia.ui.SwipeItemLayout>