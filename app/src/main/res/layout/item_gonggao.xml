<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/gonggao_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/md_black_1000"
        android:layout_marginTop="@dimen/dp_10"
        android:text="2018 12-12 11:23:34"
        />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_below="@id/gonggao_time"
        android:background="@drawable/linear_border2"
        android:layout_margin="@dimen/dp_10"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/notice_pic"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/notice"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            />


    <RelativeLayout
        android:layout_marginTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        

        <TextView
            android:id="@+id/gonggao_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/sp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:text="刘总"
            />

        <TextView
            android:id="@+id/gonggao_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_below="@id/gonggao_title"
            android:layout_alignParentLeft="true"
            android:textColor="@color/md_black_1000"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_7"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="安阳数尚啊飒飒是法师撒啊沙发沙发沙发沙发沙发沙发是阿瑟东v法撒旦发撒三十v阿三v啊飒飒是否阿萨市场啊算法生成"
            />

        <TextView
            android:id="@+id/gonggao_league"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_below="@id/gonggao_content"
            android:textColor="@color/colorPrimary"
            android:text="案说法"
            />

    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>