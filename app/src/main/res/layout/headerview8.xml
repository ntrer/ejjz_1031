<LinearLayout
    android:id="@+id/head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/shouzhi"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="收支情况"
            android:textColor="@color/white"
            />

    </LinearLayout>

   <LinearLayout
       android:paddingBottom="@dimen/dp_5"
       android:paddingTop="@dimen/dp_5"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textStyle="bold"
           android:textColor="@color/md_black_1000"
           android:gravity="center"
           />

       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textStyle="bold"
           android:text="本周"
           android:textSize="@dimen/sp_14"
           android:textColor="@color/md_black_1000"
           android:gravity="center"
           />
       <TextView
           android:textSize="@dimen/sp_14"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textStyle="bold"
           android:text="本月"
           android:textColor="@color/md_black_1000"
           android:gravity="center"
           />
       <TextView
           android:textSize="@dimen/sp_14"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textStyle="bold"
           android:text="本年"
           android:textColor="@color/md_black_1000"
           android:gravity="center_horizontal"
           />
       <TextView
           android:textSize="@dimen/sp_14"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textStyle="bold"
           android:text="累计"
           android:textColor="@color/md_black_1000"
           android:gravity="center_horizontal"
           />


   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/line"
        />
    <LinearLayout
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/sp_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="收入"
            android:textColor="@color/md_black_1000"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/week_get"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/red"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/mounth_get"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/red"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/year_get"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/red"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/total_get"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/red"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:ellipsize="end"
            />


    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line"
        />
    <LinearLayout
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/sp_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="支出"
            android:textColor="@color/md_black_1000"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/week_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/md_green_A700"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/mounth_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/md_green_A700"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/year_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/md_green_A700"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/total_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/md_green_A700"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:ellipsize="end"
            />


    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line"
        />
    <LinearLayout
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/sp_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="结余"
            android:textColor="@color/md_black_1000"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/weekBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/monthBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/yearBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/totalBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:ellipsize="end"
            />


    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#f5f5f5"
        />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="财务列表"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            />

        <View
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"
            />
    </LinearLayout>

</LinearLayout>