<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    >



    <RelativeLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="@dimen/dp_280"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="生活家"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_8"
            />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/alter_delete"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/line"
        />

    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content">

        <com.othershe.library.NiceImageView
            android:id="@+id/good_pic"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            app:corner_radius="@dimen/dp_5"
            />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/first_line"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/product_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textColor="@color/colortext"
                    android:text="(编号:89757)"
                    />

                <TextView
                    android:id="@+id/lingshoujia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="零售价:￥"
                    android:textColor="@color/colortext"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignRight="@+id/product_info"
                    />

                <TextView
                    android:id="@+id/lingshou_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortext"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignRight="@+id/product_info"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/first_line"
                android:id="@+id/second_line"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/guige"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textColor="@color/colortext"
                    android:text="规格:DC122象牙白色"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/youhui"
                android:layout_below="@+id/second_line"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/youhui_btn"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/btn_border"
                    android:text="优惠1.0"
                    android:textColor="@color/colortext"
                    android:textSize="@dimen/sp_8"
                    android:padding="@dimen/dp_3"
                    />

                <TextView
                    android:id="@+id/youhui_danjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:text="优惠单价:￥"
                    />

                <TextView
                    android:id="@+id/youhui_danjia_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/third_line"
                android:layout_below="@id/youhui"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="14sp"
                    android:text="总价:￥"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/red"
                    />

                <TextView
                    android:id="@+id/total_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="14sp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/red"
                    />

            </LinearLayout>

            <!--<com.shushang.aishangjia.ui.adderView-->
                <!--android:id="@+id/subview"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignBottom="@+id/total_money"-->
                <!--android:layout_marginRight="@dimen/dp_10"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content">-->

            <!--</com.shushang.aishangjia.ui.adderView>-->


            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/third_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
               >

                <ImageView
                    android:id="@+id/btn_reduce"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:background="@mipmap/goods_sub_btn"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/btn_add"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:background="@mipmap/goods_add_btn"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp" />
            </LinearLayout>



        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        />
</LinearLayout>

