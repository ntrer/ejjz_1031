<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/message_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--基本信息-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <View
              android:layout_margin="@dimen/dp_10"
              android:background="@color/colorPrimary"
              android:layout_width="@dimen/dp_5"
              android:layout_height="@dimen/dp_20"/>

            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_14"
                android:text="基本信息"
                android:textColor="#1a1a1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View style="@style/activity_register_v_horizontal_divider" />

        <!--客户所有人-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/activity_customer_create_tv_style2"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/suoyouren" />

                <TextView
                    android:id="@+id/et_suoyouren"
                    style="@style/activity_customer_create_et_style"
                    android:enabled="false"
                    android:maxLength="25" />

            </LinearLayout>

        </RelativeLayout>

        <View style="@style/activity_register_v_horizontal_divider" />
        <!--客户名称-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/activity_customer_create_tv_style2"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/kehumingcheng" />

                <TextView
                    android:id="@+id/et_customer_name"
                    style="@style/activity_customer_create_et_style"
                    android:enabled="false"
                    android:maxLength="25"/>

            </LinearLayout>


        </RelativeLayout>

        <View style="@style/activity_register_v_horizontal_divider" />


        <!--联系信息-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_margin="@dimen/dp_10"
                android:background="@color/colorPrimary"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_20"/>

            <TextView
                android:textColor="#1a1a1a"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center_vertical"
                android:text="联系信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View style="@style/activity_register_v_horizontal_divider" />
        <!--手机号-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/activity_customer_create_tv_style2"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/customer_mobile" />

                <TextView
                    android:id="@+id/et_customer_mobile"
                    style="@style/activity_customer_create_et_style"
                    android:enabled="false"
                    android:maxLength="25"/>

            </LinearLayout>

        </RelativeLayout>

        <View style="@style/activity_register_v_horizontal_divider" />



        <!--其他信息-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_margin="@dimen/dp_10"
                android:background="@color/colorPrimary"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_20"/>

            <TextView
                android:textColor="#1a1a1a"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center_vertical"
                android:text="其他信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View style="@style/activity_register_v_horizontal_divider" />

        <!--客户所有人-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/activity_customer_create_tv_style2"
                    android:layout_width="@dimen/dp_120"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/new_time" />

                <TextView
                    style="@style/activity_customer_create_et_style"
                    android:id="@+id/new_time"
                    android:enabled="false"
                    android:maxLength="25" />

            </LinearLayout>

        </RelativeLayout>

        <View style="@style/activity_register_v_horizontal_divider" />
        <!--创建日期-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/activity_customer_create_tv_style2"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/create_time" />

                <TextView
                    android:id="@+id/create_time"
                    style="@style/activity_customer_create_et_style"
                    android:enabled="false"
                    android:maxLength="25"/>

            </LinearLayout>


        </RelativeLayout>

        <!--最新修改日-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/activity_customer_create_tv_style2"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/edit_time" />

                <TextView
                    android:id="@+id/edit_time"
                    style="@style/activity_customer_create_et_style"
                    android:enabled="false"
                    android:maxLength="25"/>

            </LinearLayout>


        </RelativeLayout>

        <!--最新修改人-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/activity_customer_create_tv_style2"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/new_edit_people" />

                <TextView
                    android:id="@+id/new_edit_people"
                    style="@style/activity_customer_create_et_style"
                    android:enabled="false"
                    android:maxLength="25"/>

            </LinearLayout>


        </RelativeLayout>

        <View style="@style/activity_register_v_horizontal_divider" />



    </LinearLayout>


</RelativeLayout>
</android.support.v4.widget.NestedScrollView>