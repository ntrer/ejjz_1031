                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dp_48">-->

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/dp_48"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:orientation="horizontal">-->

                    <!--<TextView-->
                        <!--style="@style/activity_customer_create_tv_style"-->
                        <!--android:text="@string/now_beizhu"/>-->

                    <!--<TextView-->
                        <!--android:id="@+id/now_beizhu"-->
                        <!--style="@style/activity_customer_create_et_style"-->
                        <!--android:ellipsize="end"-->
                        <!--android:maxLines="1"-->
                        <!--android:maxEms="10"-->
                        <!--android:hint="@string/must_fill_in"/>-->

                <!--</LinearLayout>-->


                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="@dimen/dp_24"-->
                    <!--android:text="@string/must_fill_in_sign"-->
                    <!--android:textColor="@color/red"-->
                    <!--android:textSize="@dimen/sp_14"/>-->

            <!--</RelativeLayout>-->

            <!--<View style="@style/activity_register_v_horizontal_divider"/>-->


            <!--下次沟通时间-->
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/activity_customer_create_tv_style"
                        android:text="@string/next_time"/>

                    <TextView
                        android:id="@+id/next_time"
                        style="@style/activity_customer_create_et_style"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:maxEms="10"
                        android:hint="@string/must_select"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:text="@string/must_fill_in_sign"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_14"/>

            </RelativeLayout>

            <View style="@style/activity_register_v_horizontal_divider"/>

            <Button
                android:id="@+id/btn_submit"
                style="@style/activity_register_btn_submit"
                android:layout_marginBottom="@dimen/dp_25"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
